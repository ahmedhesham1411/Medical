<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="searchVM"
            type="com.gharbia.medical.viewModel.SearchViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        tools:context=".Activities.AppointmentsActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal"
            android:background="@color/blue">

            <FrameLayout
                android:onClick="@{()->searchVM.back()}"
                android:id="@+id/back_frame"
                android:layout_weight="1"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_15sdp"
                tools:ignore="ObsoleteLayoutParam,UselessParent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24_white" />

            </FrameLayout>

            <com.gharbia.medical.MyTextViewCairo
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:id="@+id/card"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_white"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/rounded_grey"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:hint="@string/search"
                            android:id="@+id/search_edt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_grey"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            android:maxLines="1"
                            android:textAlignment="viewStart"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:maxHeight="@dimen/_30sdp"
                            android:inputType="text"
                            android:imeOptions="actionSearch"
                            android:imeActionLabel="Search"
                            android:layout_marginEnd="@dimen/_50sdp"
                            android:layout_marginStart="@dimen/_10sdp"/>

                        <com.gharbia.medical.MyTextViewCairo
                            android:onClick="@{()->searchVM.Search()}"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_blue"
                            android:text="@string/search"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:id="@+id/search_icon"
                            android:textSize="@dimen/_10ssp"/>


                    </RelativeLayout>

                    <net.cachapa.expandablelayout.ExpandableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/expandable_hotel_facilities"
                        app:el_duration="1000"
                        app:el_expanded="true"
                        app:el_parallax="0.5">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:layout_marginStart="@dimen/_10sdp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/star_full"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_10sdp"/>

                                <com.gharbia.medical.MyTextViewCairo
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/_10ssp"
                                    android:text="@string/rating"
                                    android:layout_marginStart="@dimen/_10ssp"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"/>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/code_lin"
                                android:layout_below="@+id/user_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="14dp"
                                android:layout_marginStart="14dp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layoutDirection="ltr"
                                android:orientation="horizontal">

                                <com.gharbia.medical.MyTextViewCairo
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:onClick="@{()->searchVM.RateClick(1)}"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:background="@{searchVM.rate1? @drawable/shape_shadow_colored2 : @drawable/shape_shadow2}"
                                    android:orientation="horizontal"
                                    android:gravity="center">

                                    <com.gharbia.medical.MyTextViewCairo
                                        android:inputType="number"
                                        android:id="@+id/num1_edt"
                                        android:layout_width="wrap_content"
                                        android:text="1"
                                        android:textSize="@dimen/_10ssp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:focusable="true"
                                        android:maxLength="1"
                                        android:textColor="@{searchVM.rate1? @color/white : @color/black}"
                                        tools:ignore="HardcodedText" />

                                    <Space
                                        android:layout_width="@dimen/_5sdp"
                                        android:layout_height="match_parent"/>

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@{searchVM.rate1? @drawable/star_full : @drawable/star_empty}"
                                        android:layout_gravity="center_vertical"/>

                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:onClick="@{()->searchVM.RateClick(2)}"
                                    android:background="@{searchVM.rate2? @drawable/shape_shadow_colored2 : @drawable/shape_shadow2}"
                                    android:orientation="horizontal"
                                    android:gravity="center">

                                    <com.gharbia.medical.MyTextViewCairo
                                        android:inputType="number"
                                        android:id="@+id/num2_edt"
                                        android:layout_width="wrap_content"
                                        android:text="2"
                                        android:textSize="@dimen/_10ssp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:focusable="true"
                                        android:maxLength="1"
                                        android:textColor="@{searchVM.rate2? @color/white : @color/black}"
                                        tools:ignore="HardcodedText" />

                                    <Space
                                        android:layout_width="@dimen/_5sdp"
                                        android:layout_height="match_parent"/>

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@{searchVM.rate2? @drawable/star_full : @drawable/star_empty}"
                                        android:layout_gravity="center_vertical"/>

                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:onClick="@{()->searchVM.RateClick(3)}"
                                    android:background="@{searchVM.rate3? @drawable/shape_shadow_colored2 : @drawable/shape_shadow2}"                    android:orientation="horizontal"
                                    android:gravity="center">

                                    <com.gharbia.medical.MyTextViewCairo
                                        android:inputType="number"
                                        android:id="@+id/num3_edt"
                                        android:layout_width="wrap_content"
                                        android:text="3"
                                        android:textSize="@dimen/_10ssp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:focusable="true"
                                        android:maxLength="1"
                                        android:textColor="@{searchVM.rate3? @color/white : @color/black}"
                                        tools:ignore="HardcodedText" />

                                    <Space
                                        android:layout_width="@dimen/_5sdp"
                                        android:layout_height="match_parent"/>

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@{searchVM.rate3? @drawable/star_full : @drawable/star_empty}"
                                        android:layout_gravity="center_vertical"/>

                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:onClick="@{()->searchVM.RateClick(4)}"
                                    android:background="@{searchVM.rate4? @drawable/shape_shadow_colored2 : @drawable/shape_shadow2}"                     android:orientation="horizontal"
                                    android:gravity="center">

                                    <com.gharbia.medical.MyTextViewCairo
                                        android:inputType="number"
                                        android:id="@+id/num4_edt"
                                        android:layout_width="wrap_content"
                                        android:text="4"
                                        android:textSize="@dimen/_10ssp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:focusable="true"
                                        android:maxLength="1"
                                        android:textColor="@{searchVM.rate4? @color/white : @color/black}"
                                        tools:ignore="HardcodedText" />

                                    <Space
                                        android:layout_width="@dimen/_5sdp"
                                        android:layout_height="match_parent"/>

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@{searchVM.rate4? @drawable/star_full : @drawable/star_empty}"
                                        android:layout_gravity="center_vertical"/>

                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:onClick="@{()->searchVM.RateClick(5)}"
                                    android:background="@{searchVM.rate5? @drawable/shape_shadow_colored2 : @drawable/shape_shadow2}"                     android:orientation="horizontal"
                                    android:gravity="center">

                                    <com.gharbia.medical.MyTextViewCairo
                                        android:inputType="number"
                                        android:id="@+id/num5_edt"
                                        android:layout_width="wrap_content"
                                        android:text="5"
                                        android:textSize="@dimen/_10ssp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:focusable="true"
                                        android:maxLength="1"
                                        android:textColor="@{searchVM.rate5? @color/white : @color/black}"
                                        tools:ignore="HardcodedText" />

                                    <Space
                                        android:layout_width="@dimen/_5sdp"
                                        android:layout_height="match_parent"/>

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@{searchVM.rate5? @drawable/star_full : @drawable/star_empty}"
                                        android:layout_gravity="center_vertical"/>

                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <com.gharbia.medical.MyTextViewCairo
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:visibility="gone"
                                android:id="@+id/line1"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:background="@color/hint" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal"
                                android:layout_marginStart="@dimen/_10sdp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_my_location_24"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_10sdp"/>

                                <com.gharbia.medical.MyTextViewCairo
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/_10ssp"
                                    android:text="@string/city"
                                    android:layout_marginStart="@dimen/_10ssp"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"/>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <RelativeLayout
                                android:orientation="horizontal"
                                android:id="@+id/spinner_lin_region"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/rounded_grey"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">
                                <Spinner
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/region_spinner"
                                    android:hint="@string/city"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:textAlignment="viewStart"
                                    android:gravity="start|center_vertical"
                                    android:background="@drawable/rounded_grey"
                                    android:layout_width="match_parent"
                                    android:layout_height="36dp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:id="@+id/spinner_arrow_region"
                                    android:rotation="270"
                                    android:layout_marginEnd="20dp"
                                    android:backgroundTint="@color/blue"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/ic_baseline_arrow_back_ios_24_white"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp" />
                            </RelativeLayout>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/lineCategory"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:background="@color/hint" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:layout_marginStart="@dimen/_10sdp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_category_24"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_10sdp"/>

                                <com.gharbia.medical.MyTextViewCairo
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/_10ssp"
                                    android:text="@string/department"
                                    android:layout_marginStart="@dimen/_10ssp"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"/>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <RelativeLayout
                                android:orientation="horizontal"
                                android:id="@+id/spinner_lin_category"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/rounded_grey"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">
                                <Spinner
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/category_spinner"
                                    android:hint="@string/city"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:textAlignment="viewStart"
                                    android:gravity="start|center_vertical"
                                    android:background="@drawable/rounded_grey"
                                    android:layout_width="match_parent"
                                    android:layout_height="36dp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:id="@+id/spinner_arrow_category"
                                    android:rotation="270"
                                    android:layout_marginEnd="20dp"
                                    android:backgroundTint="@color/blue"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/ic_baseline_arrow_back_ios_24_white"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp" />
                            </RelativeLayout>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/lineMaster"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:background="@color/hint" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:layout_marginStart="@dimen/_10sdp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_center_focus_strong_24"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_10sdp"/>

                                <com.gharbia.medical.MyTextViewCairo
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/_10ssp"
                                    android:text="@string/degree"
                                    android:layout_marginStart="@dimen/_10ssp"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"/>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <RelativeLayout
                                android:orientation="horizontal"
                                android:id="@+id/spinner_lin_master"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/rounded_grey"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">
                                <Spinner
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/master_spinner"
                                    android:hint="@string/city"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:textAlignment="viewStart"
                                    android:gravity="start|center_vertical"
                                    android:background="@drawable/rounded_grey"
                                    android:layout_width="match_parent"
                                    android:layout_height="36dp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:id="@+id/spinner_arrow_master"
                                    android:rotation="270"
                                    android:layout_marginEnd="20dp"
                                    android:backgroundTint="@color/blue"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/ic_baseline_arrow_back_ios_24_white"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp" />
                            </RelativeLayout>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/line111"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:background="@color/hint" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:layout_marginStart="@dimen/_10sdp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_sort_24"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_10sdp"/>

                                <com.gharbia.medical.MyTextViewCairo
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/_10ssp"
                                    android:text="@string/sort"
                                    android:layout_marginStart="@dimen/_10ssp"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"/>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <RelativeLayout
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:orientation="horizontal"
                                android:id="@+id/spinner_lin_sort"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/rounded_grey"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">
                                <Spinner
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/sort_spinner"
                                    android:hint="@string/city"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:textAlignment="viewStart"
                                    android:gravity="start|center_vertical"
                                    android:background="@drawable/rounded_grey"
                                    android:layout_width="match_parent"
                                    android:layout_height="36dp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:id="@+id/spinner_arrow_sort"
                                    android:rotation="270"
                                    android:layout_marginEnd="20dp"
                                    android:backgroundTint="@color/blue"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/ic_baseline_arrow_back_ios_24_white"
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp" />
                            </RelativeLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ProgressBar
                                    android:visibility="gone"
                                    android:id="@+id/load_progress"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_7sdp"/>

                            </FrameLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </net.cachapa.expandablelayout.ExpandableLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/rounded_grey"
                        android:src="@drawable/ic_baseline_arrow_downward_24"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/expand"
                        android:layout_marginBottom="@dimen/_5sdp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nested_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:layout_marginTop="@dimen/_15sdp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/recycler"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.core.widget.NestedScrollView>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>
